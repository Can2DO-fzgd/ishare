{% if teacher %}
<div class="es-box">
  <div class="es-box-heading"><h2>每日一享</h2></div>
  <div class="es-box-body">
    <div class="promoted-teacher">
      <a href="{{ path('user_show', {id:teacher.id}) }}"><img src="{{ file_path(teacher.mediumAvatar, 'avatar.png') }}" class="avatar"></a>
      <a class="userName" href="{{ path('user_show', {id:teacher.id}) }}">{{ teacher.userName }}</a>
      <div class="title">{{ teacher.title }}</div>
      <div class="about">{{ teacher.about|plain_text(100) }}</div>
      <div class="more"><a href="{{ path('user_show', {id:teacher.id}) }}">去享客主页看看 &raquo;</a></div>
    </div>
  </div>
</div>
{% endif %}