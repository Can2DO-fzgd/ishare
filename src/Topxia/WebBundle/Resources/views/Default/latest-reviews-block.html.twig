<div class="es-box">
	<div class="es-box-heading"><h2>会员评价</h2></div>
<ul class="media-list latest-review-list">
	{% for review in reviews %}
	  {% set author = users[review.userId]|default(null) %}
	  {% set product = products[review.productId]|default(null) %}
	  {% if author and product %}
		  <li class="media">
		  	<a href="{{ path('user_show', {id:author.id}) }}" class="author-picture-link">
			  	<img class="author-picture" src="{{ file_path(author.smallAvatar, 'avatar.png') }}">
		  	</a>
		  	<a href="{{ path('user_show', {id:author.id}) }}" class="author-userName">{{ author.userName }}</a> <span class="text-muted">说：</span> <br>
		  	<div class="review-content">{{ review.content|plain_text(50) }}</div>

			  <div class="review-footer">
				  <a href="{{ path('product_show', {id:product.id}) }}" class="product-title"> {{ product.name }}</a>
				  <span class="divider"></span>
				  <span class="stars-{{review.rating }}">&nbsp;</span>
			  </div>

		  </li>
	  {% endif %}
	{% else %}
	  <li class="empty">还没有评价</li>
	{% endfor %}
</ul>
</div>
