{% extends 'TopxiaWebBundle:ProductManage:layout.html.twig' %}

{% block title %}产品补充说明管理 - {{ parent() }}{% endblock %}

{% set side_nav = 'lesson' %}
{% set script_controller = 'product-manage/lesson' %}

{% block main %}

<div class="panel panel-default panel-col lesson-manage-panel">
	<div class="panel-heading">
		<div>
		<!--<div class="pull-right">-->

			<div class="btn-group">
			  <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-toggle="dropdown">
			    <i class="glyphicon glyphicon-plus"></i> 目录章节 <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu" role="menu">
			    <li>
			      <a href="#" id="chapter-create-btn" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="{{ path('product_manage_chapter_create', {id:product.id}) }}"><i class="glyphicon glyphicon-plus"></i> 添加 补充说明 章</a>
			    </li>
			    <li>
			      <a href="#" id="chapter-create-btn" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="{{ path('product_manage_chapter_create', {id:product.id, type:'unit'}) }}"><i class="glyphicon glyphicon-plus"></i> 添加 补充说明 节</a>
			    </li>
			  </ul>
			</div>
			
			<button class="btn btn-info btn-sm" id="lesson-create-btn" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="{{ path('product_manage_lesson_create', {id:product.id}) }}"><i class="glyphicon glyphicon-plus"></i> 补充说明</button>
			
			<button class="btn btn-info btn-sm" id="lesson-create-btn" data-toggle="modal" data-target="#modal" data-backdrop="static" data-keyboard="false" data-url="{{ path('product_manage_lesson_create_testpaper', {id:product.id}) }}"><i class="glyphicon glyphicon-plus"></i> 调查问卷</button>	
		</div>
		

		<!--菜单-->
	</div>

	{% if items is empty %}

	 <div class="empty">暂无产品补充说明内容！</div>

	 {% endif %}

	<div class="panel-body">
		<ul class="lesson-list sortable-list" id="product-item-list" data-sort-url="{{ path('product_manage_lesson_sort', {id:product.id}) }}">

			{% for id, item in items %}
			  {% if 'chapter' in id %}
			    {% include 'TopxiaWebBundle:ProductChapterManage:list-item.html.twig' with {chapter: item} %}
			  {% elseif 'lesson' in id %}
			    {% include 'TopxiaWebBundle:ProductLessonManage:list-item.html.twig' with {lesson: item} %}
			  {% endif %}
			{% endfor %}
			
		</ul>
	</div>
</div>

{% endblock %}
