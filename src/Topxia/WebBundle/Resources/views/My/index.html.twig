{% extends 'TopxiaWebBundle::layout.html.twig' %}
{% block title %}个人中心 - {{ parent() }}{% endblock %}
{% set nav = 'index' %}
{% set bodyClass = 'index' %}
{% block content %}

<div class="row">
  {% include 'TopxiaWebBundle:My:my-nav.html.twig' %}
    <div class="col-md-9">
        <div class="panel panel-default panel-col">
          <div class="panel-heading">
            {% include 'TopxiaWebBundle:MyProduct:my-products-nav.html.twig' %}
              </div>
              <div class="panel-body">
                {% if learningProducts is empty %}
                <h3>你还没有关注任何产品，<a href="{{ path('product_explore') }}">来关注更多产品吧！ </a>
            {% else %}
                {% include 'TopxiaWebBundle:MyProduct:my-products-list.html.twig' with { users: users, products: learningProducts } %}
            {% endif %}
            </div>
        </div>
        {{ web_macro.paginator(paginator) }}
    </div>
</div>

{% endblock %}
