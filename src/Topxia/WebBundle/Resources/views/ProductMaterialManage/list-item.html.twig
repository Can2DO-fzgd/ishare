<li class="list-group-item">
  {% if material.link %}
    <a href="{{ material.link }}" target="_blank">{{ material.title }}</a>
    <span class="glyphicon glyphicon-new-window text-muted text-sm" title="网络链接资料"></span>
  {% else %}
    <a href="{{ path('product_material_download', {productId:material.productId, materialId:material.id}) }}">{{ material.title }}</a>
  {% endif %}
  <button class="close delete-btn" type="button" title="删除" data-url="{{ path('product_manage_material_delete', {productId:material.productId, lessonId:material.lessonId, materialId:material.id}) }}">&times;</button>
</li>