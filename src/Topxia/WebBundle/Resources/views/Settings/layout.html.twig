{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}帐号设置 - {{ parent() }}{% endblock %}

{% block content %}
<div class="row">
  <div class="col-md-3">
    {% block side %}
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="list-group-block">
            <div class="list-group-panel">
              <div class="list-group-heading">帐号设置</div>
            <ul class="list-group">
              {% set side_nav = side_nav|default(null) %}
              <a class="list-group-item {% if side_nav == 'profile' %}active{% endif %}" href="{{ path('settings') }}"><i class="glyphicon glyphicon-user"></i> 基础信息</a>
              
              <a class="list-group-item {% if side_nav == 'avatar' %}active{% endif %}" href="{{ path('settings_avatar') }}"><i class="glyphicon glyphicon-picture"></i> 头像设置</a>
              
              <a class="list-group-item {% if side_nav == 'password' %}active{% endif %}" href="{{ path('settings_password') }}"><i class="glyphicon glyphicon-lock"></i> 密码修改</a>
              
              <a class="list-group-item {% if side_nav == 'email' %}active{% endif %}" href="{{ path('settings_email') }}"><i class="glyphicon glyphicon-envelope"></i> 邮箱设置</a>
			  
			  <a class="list-group-item" href="{{ path('user_show', {id:app.user.id}) }}"><i class="glyphicon glyphicon-cog"></i>我的微站</a>
			  
			  <a class="list-group-item" href="{{ path('product_create') }}"><i class="glyphicon glyphicon-cog"></i>发布分享</a>
			  
			  <a class="list-group-item" href="{{ path('notification') }}">
                	<span class="glyphicon glyphicon-bullhorn hidden-lt-ie8"></span>我的通知
                	{#<span class="visible-lt-ie8">通知</span>#}
                	{% if app.user.newNotificationNum > 0 %}<span class="badge">{{ app.user.newNotificationNum }}</span>{% endif %}
		  	  </a>
			  
		  	  <a class="list-group-item" href="{{ path('message') }}" >
                	<span class="glyphicon glyphicon-envelope hidden-lt-ie8"></span>我的私信
                	{#<span class="visible-lt-ie8">私信</span>#}
                	{% if app.user.newMessageNum > 0 %}<span class="badge">{{ app.user.newMessageNum }}</span>{% endif %}
          	  </a>

              {% if setting('login_bind', []).enabled|default(false) %}
                <a class="list-group-item {% if side_nav == 'binds' %}active{% endif %}" href="{{ path('settings_binds') }}"><i class="glyphicon glyphicon-circle-arrow-right"></i> 第三方登录</a>
              {% endif %}

            </ul>
            </div>
          </div>{#<!-- /list-group-block -->#}
        </div>

      </div>
    {% endblock %}
  </div>
  <div class="col-md-9">
    {% block main %}{% endblock %}
  </div>
</div>
{% endblock %}