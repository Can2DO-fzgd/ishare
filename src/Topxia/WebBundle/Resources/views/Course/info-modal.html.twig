{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% set hide_footer = true %}

{% block title %}产品信息{% endblock %}

{% block body %}

<dl class="course-modal-infos">
  <dt>产品介绍</dt>
  <dd>{{ course.about|raw }}</dd>

  {% if category %}
  <dt>产品分类</dt>
  <dd>
    <a href="{{ path('course_explore', {category:category.code|default(category.id)}) }}" target="_blank">{{ category.name }}</a>
  </dd>
  {% endif %}

  {% if course.tags %}
    <dt>产品品牌标签</dt>
    <dd>
      <ul class="list-inline">
        {% for tag in tags %}
          <li>{{ tag.name }}</li>
        {% else %}
          <li>暂无产品品牌标签</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if course.goals %}
    <dt>产品亮点功能</dt>
    <dd>
      <ul>
        {% for goal in course.goals %}
          <li>{{ goal }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if course.audiences %}
    <dt>适合人群/用途</dt>
    <dd>
      <ul>
        {% for audience in course.audiences %}
          <li>{{ audience }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}
</dl>
{% endblock %}