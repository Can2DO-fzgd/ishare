{% extends 'TopxiaWebBundle::layout.html.twig' %}

{% block title %}{{ product.name }} - {{ parent() }}{% endblock %}

{% set script_arguments = {product_uri: path('product_show', {id:product.id})} %}

{% block content %}

<div class="container-gap">

  {{ render(controller('TopxiaWebBundle:Product:header', {product:product})) }}

  <div class="row row-8-4">
    <div class="col-md-8">
      <div class="panel panel-default" id="dashboard-main">
        <div class="panel-body">
          {% block dashboard_main %}{% endblock %}
        </div>
      </div>
    </div>

    <div class="col-md-4">
      {{ render(controller('TopxiaWebBundle:Product:progressBlock',{product:product})) }}
      {{ render(controller('TopxiaWebBundle:ProductAnnouncement:block',{product:product})) }}
      {{ render(controller('TopxiaWebBundle:ProductThread:questionBlock',{product:product})) }}
    </div>
  </div>

</div>

{% endblock %}

{% block bottom %}
  <div id="product-modal" class="modal"></div>
{% endblock %}