{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'modal-lg' %}

{% set hide_footer = true %}

{% block title %}产品信息{% endblock %}

{% block body %}

<dl class="product-modal-infos">
  <dt>产品规格</dt>
  <dd>{{ product.specinfo|raw }}</dd>

  {% if category %}
  <dt>产品分类</dt>
  <dd>
    <a href="{{ path('product_explore', {category:category.code|default(category.id)}) }}" target="_blank">{{ category.name }}</a>
  </dd>
  {% endif %}

  {% if product.tags %}
    <dt>品牌标签</dt>
    <dd>
      <ul class="list-inline">
        {% for tag in tags %}
          <li>{{ tag.name }}</li>
        {% else %}
          <li>暂无产品品牌标签</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if product.efficacyinfo %}
    <dt>产品功能</dt>
    <dd>
      <ul>
        {% for goal in product.efficacyinfo %}
          <li>{{ goal }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}

  {% if product.yaodian %}
    <dt>创新要点</dt>
    <dd>
      <ul>
        {% for audience in product.yaodian %}
          <li>{{ audience }}</li>
        {% endfor %}
      </ul>
    </dd>
  {% endif %}
</dl>
{% endblock %}