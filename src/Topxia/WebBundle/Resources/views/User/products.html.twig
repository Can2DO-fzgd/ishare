{% extends 'TopxiaWebBundle:User:layout.html.twig' %}

{% block title %} 

{% if user.companyname != '' %} 
	{{ user.companyname }} 
{% elseif user.nichen != '' %}
	{{ user.nichen}}
{% elseif user.realName != '' %}
	{{ user.realName }}
{% else %} 
	神秘人物
{% endif %}

的公共主页 - {{ parent() }}{% endblock %}

{% set pageNav = type %}

{% block main %}
<div class="row">
  <div class="col-md-12">
		{% if products %}
			{{ render(controller('TopxiaWebBundle:Product:productsBlock', {products:products, view: 'list'})) }}
			{{ web_macro.paginator(paginator) }} 
		{% else %}
		  {% if pageNav == 'teach' %}
			  <div class="empty">无分享的产品</div>
			{% elseif pageNav == 'learn' %}
			  <div class="empty">无关注的产品</div>
			{% elseif pageNav == 'favorited' %}
			  <div class="empty">无收藏的产品</div>
			{% endif %}
	  {% endif %}
	</div>
</div>
{% endblock %}

