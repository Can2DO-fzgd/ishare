<li class="post-item">
	<div class="post-item-heading clearfix">
		<img src="{{ file_path(user.smallAvatar, 'avatar.png') }}" class="avatar">
		<div class="infos">
			<div class="userName">
				<a href="{{ path('user_show', {id:user.id}) }}" class="userName">{{ user.userName }}</a>
				{% if user.id in product.teacherIds %}
					<span class="teacher-flag">享客</span>
				{% endif %}
			</div>
			<div class="time">{{ post.createdTime|smart_time }}</div>
		</div>
	</div>

	<div class="post-item-body">
		{{ post.content|raw }}
	</div>
</li>