{% extends 'TopxiaAdminBundle:Product:layout.html.twig' %}

{% block title %}产品推荐列表 - {{ parent() }}{% endblock %}

{% set script_controller = 'product/recommend-list' %}

{% set menu = 'product-recommend-list' %}

{% block main %}
  <div class="page-header">
    <h1>产品推荐列表</h1>
  </div>

  <table class="table table-striped table-hover" id="product-recommend-table">
    <thead>
    <tr>
      <th>顺序号</th>
      <th width="50%">产品名称</th>
      <th>创建者</th>
      <th>推荐时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
      {% for product in products %}
        {% set user = users[product.userId]|default(null) %}
        {% set category = categories[product.categoryId]|default(null) %}
        {% include 'TopxiaAdminBundle:Product:product-recommend-tr.html.twig' %}
      {% else %}
        <tr><td colspan="20"><div class="empty">暂无推荐产品</div></td></tr>
      {% endfor %}
    </tbody>
  </table>

  {{ web_macro.paginator(paginator) }}

{% endblock %}