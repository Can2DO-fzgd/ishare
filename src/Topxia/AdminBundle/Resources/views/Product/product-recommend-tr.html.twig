{% import "TopxiaAdminBundle::macro.html.twig" as admin_macro %}
<tr id="product-tr-{{ product.id }}" data-sort="{{ product.recommendedSeq }}">
  <td>{{ product.recommendedSeq }}</td>
  <td>
    <a href="{{ path('product_show', {id:product.id}) }}" target="_blank"><strong>{{ product.name }}</strong></a>
    <br>
    <span class="text-muted text-sm">分类：{{ category.name|default('--') }}</span>
    {% if product.recommended %}
      <span class="label label-default">荐:{{ product.recommendedTime|date('Y-m-d') }}</span>
    {% endif %}
  </td>
  <td>
    {{ admin_macro.user_link(user) }}
    <br>
    <span class="text-muted text-sm">{{ product.createdTime|date('Y-n-d H:i') }}</span>
  </td>
  <td>
    {{ product.recommendedTime|date('Y-m-d') }}
  </td>
  <td>
    <div class="btn-group">
      <a class="btn btn-default btn-sm" href="#modal" data-toggle="modal" data-url="{{ path('admin_product_recommend', {id:product.id, ref:'recommendList'}) }}">设置序号</a>

      <a href="#" type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu pull-right">

        <li><a class="cancel-recommend-product" href="javascript:" data-url="{{ path('admin_product_cancel_recommend', {id:product.id}) }}"><span class="glyphicon glyphicon-hand-right"></span> 取消推荐</a></li>
    
      </ul>
    </div>
  </td>
</tr>