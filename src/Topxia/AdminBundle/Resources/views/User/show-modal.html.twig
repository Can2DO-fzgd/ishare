{% extends 'TopxiaWebBundle::bootstrap-modal-layout.html.twig' %}

{% block title %}个人详细信息{% endblock %}

{% block body %}

<table class="table table-striped table-condenseda table-bordered">
  <tr>
    <th width="25%">用户名</th>
    <td width="75%">
      <a class="pull-right" href="{{ path('user_show', {id:user.id}) }}" target="_blank">个人主页</a>
      {{ user.userName }}
    </td>
  </tr>

  <tr>
    <th>Email</th>
    <td>{{ user.email }}</td>
  </tr>

  <tr>
    <th>用户组</th>
    <td>
      {% for role in user.roles %}
        {{ dict_text('userRole', role) }}
      {% endfor %}
    </td>
  </tr>

  <tr>
    <th>注册时间/IP</th>
    <td>
      {{ user.createdTime|date('Y-n-d H:i:s') }}
      /
      {{ user.createdIp }}
    </td>
  </tr>

  <tr>
    <th>最近登录时间/IP</th>
    <td> 
      {% if user.loginTime == 0 %}
          --
      {% else %}
          {{ user.loginTime|date('Y-n-d H:i:s') }}
      {% endif %}
      {% if user.loginIp|default is not empty %}
           / {{ user.loginIp }}
      {% endif %}
     </td>
  </tr>

  <tr>
    <th>姓名</th>
    <td>
      {% if profile.realName %}
        {{ profile.realName }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>性别</th>
    <td>
      {% if profile.sex %}
        {% if profile.sex == '1' %}男性{% endif %}
        {% if profile.sex == '2' %}女性{% endif %}
        {% if profile.sex == '0' %}秘密{% endif %}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>类型</th>
    <td>
	  {% if profile.iam %}
      	{% if profile.iam == 'student' %}在校生{% endif %}
		{% if profile.iam == 'notStudent' %}在校生{% endif %}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>
 
  <tr>
    <th>学校</th>
    <td>
      {% if profile.school %}
        {{ profile.school }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>班级</th>
    <td>
      {% if profile.class %}
        {{ profile.class }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>公司</th>
    <td>
      {% if profile.companyname %}
        {{ profile.companyname }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>职业</th>
    <td>
      {% if profile.job %}
        {{ profile.job }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>


  <tr>
    <th>头衔</th>
    <td>
    {% if profile.title %}
        {{ profile.title }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>个人签名</th>
    <td>
    {% if profile.nichen %}
        {{ profile.nichen }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>自我介绍</th>
    <td>
    {% if profile.remark %}
        {{ profile.remark | raw }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>个人网站</th>
    <td>
      {% if profile.site %}
        {{ profile.site }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>微博</th>
    <td>
      {% if profile.weibo %}
        {{ profile.weibo }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>微信</th>
    <td>
      {% if profile.weixin %}
        {{ profile.weixin }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>

  <tr>
    <th>QQ</th>
    <td>
      {% if profile.qq %}
        {{ profile.qq }}
      {% else %}
        暂无
      {% endif %}
    </td>
  </tr>
</table>

{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>
{% endblock %}