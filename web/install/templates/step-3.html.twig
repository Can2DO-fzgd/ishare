{% extends "layout.html.twig" %}

{% block main %}
  {% if error %}
    <div class="alert alert-danger">{{ error }}</div>
  {% endif %}

  <form class="form-horizontal" id="init-form" method="post">

    <div class="form-group">
      <label for="sitename-field" class="col-sm-4 control-label">网站名称</label>
      <div class="controls col-sm-5">
        <input type="text" class="form-control" id="sitename-field" name="sitename" value="{{ request.sitename|default('MeBUS移动商务套件') }}">
      </div>
    </div>

    <div class="form-group">
      <label for="admin-email-field" class="col-sm-4 control-label">管理员Email地址</label>
      <div class="controls col-sm-5">
        <input type="text" class="form-control" id="admin-email-field" name="admin[email]" value="{{ request.admin.email|default('1069945237@qq.com') }}">
      </div>
    </div>

    <div class="form-group">
      <label for="admin-userName-field" class="col-sm-4 control-label">管理员手机号</label>
      <div class="controls col-sm-5">
        <input type="text" class="form-control" id="admin-userName-field" name="admin[userName]" value="{{ request.admin.userName|default('13340196186') }}">
      </div>
    </div>

    <div class="form-group">
      <label for="admin-password-field" class="col-sm-4 control-label">管理员密码</label>
      <div class="controls col-sm-5">
        <input type="text" class="form-control" id="admin-password-field" name="admin[password]" value="{{ request.admin.password|default('admin') }}">
      </div>
    </div>

    <div class="actions">
      <button type="submit" id="init-btn" class="btn btn-primary btn-lg">初始化系统</button>
    </div>

  </form>
{% endblock %}

{% block bottom_scripts %}
<script>
  seajs.use(['jquery', 'bootstrap.validator', 'common/validator-rules'], function($, Validator, Rules){
    window.$ = $;
    Rules.inject(Validator);
    var $form = $("#init-form");

    var validator = new Validator({
        element: $form
    });

    validator.addItem({
        element: '#sitename-field',
        required: true
    });

    validator.addItem({
        element: '#admin-email-field',
        required: true,
        rule: 'email'
    });

    validator.addItem({
        element: '#admin-userName-field',
        required: true,
        rule: 'chinese_alphanumeric byte_minlength{min:4} byte_maxlength{max:14}'
    });

    validator.addItem({
        element: '#admin-password-field',
        required: true,
        rule: 'minlength{min:5} maxlength{max:20}'
    });

  });
</script>
{% endblock %}